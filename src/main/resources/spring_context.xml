<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	   	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<context:annotation-config />

	<import resource="classpath*:common_context.xml"/>

	<bean class="org.springframework.scheduling.config.ScheduledTaskRegistrar">
		<property name="cronTasks">
			<map>
				<entry>
					<key>
						<bean class="org.ihtsdo.ts.importer.schedule.StartFilteredImport"/>
					</key>
					<value>${schedule.startDailyImport.cron}</value>
				</entry>
			</map>
		</property>
	</bean>

	<bean class="org.ihtsdo.ts.importer.ImporterService"/>
	
	<bean class="org.ihtsdo.ts.importer.Importer"/>

	<bean class=" org.ihtsdo.ts.workflow.TicketWorkflowManager" init-method="init"/>
	<bean class=" org.ihtsdo.ts.workflow.DailyDeltaTicketWorkflow"/>
	
	<bean class="org.ihtsdo.ts.importer.clients.snowowl.SnowOwlRestClient">
		<constructor-arg value="${snowowl.url}"/>
		<constructor-arg value="${snowowl.username}"/>
		<constructor-arg value="${snowowl.password}"/>
		<property name="reasonerId" value="${snowowl.reasonerId}"/>
	</bean>

	<!--<bean class="org.ihtsdo.otf.dao.s3.OfflineS3ClientImpl"/>-->

	<bean class="org.ihtsdo.otf.dao.s3.S3ClientImpl" >
		<constructor-arg>
			<bean class="com.amazonaws.auth.BasicAWSCredentials">
				<constructor-arg value="${aws.key}"/>
				<constructor-arg value="${aws.secretKey}"/>
			</bean>
		</constructor-arg>
	</bean>

	<bean name="jiraContentProjectSync" class="org.ihtsdo.ts.importer.clients.jira.JiraProjectSync">
		<constructor-arg value="${jira.contentProjectKey}"/>
		<constructor-arg value="${jira.url}"/>
		<constructor-arg value="${jira.username}"/>
		<constructor-arg value="${jira.password}"/>
	</bean>

	<bean class="org.ihtsdo.ts.importer.clients.WorkbenchWorkflowClient"/>

	<bean class="org.ihtsdo.ts.importer.DevTestTool"/>

</beans>
